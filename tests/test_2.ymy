{% extends "base_popup.html" %}
{% block popup_title %}{{_('Sharing settings')}}{%endblock%}
{% block popup_content %}
div.settings_content
	- style width: 800px;
	| {{ super() }}
	div.form_errors
		- id form_errors
		- style display:none;
		
	div.form_content
		div.menu_items
			div
				- class menu_item line_height general_tab
				| {{_('General')}}
			div
				- class menu_item line_height emails_rights_tab
				| {{_('Emails and Rights')}}
				
		form.popup_form
			- {% if sharing_settings_id%}
			- action /projects/sharing_settings/{sharing_settings_id}}/
			- {% else %}
			- action /projects/sharing_settings/
			- {% endif %}
			- method post
			div.settings_main_block
				div.keyword_module
					div#general_tab.menu_tab
						h5	
							| {{_("Partner:")}}
        				div.form_field
        				    | {{form.name}} 
         				h5		
        					| {{_("Partner projects:")}}
          				div.form_field
        				    | {{form.projects}}
        				    
        			div#emails_rights_tab.menu_tab
        				h5
        					| test
        					
	    	div.control_container
	    		div.controls
	    			div.cancel_btn
	    				- class a_button pop_close
	    				- style float:right;margin-right:0;
	    				a
	    					- onclick return false
	    					- style display:block
	    					| {{ _('Cancel') }}
	    				
	    			div
	    				- for_class_button
	    				input.button#form_save
	 						- type submit
	 						- value {{_('Save')}} 
{% endblock %}
{% block scripts %}
script
	var tabs = $A($$('.menu_tab'));
    var menu_items = $A($$('.menu_item'));
	new TabMenu({
		tabs: tabs,
		menuItems: menu_items
	});
{% endblock %}
